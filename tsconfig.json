{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "target": "es6",
        "module": "commonjs",
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
          "ES2021.String"
        ]
    },
    "include": [
      "source/js/**/*",
    ]
}
