{
  "name": "Design System",
  "version": "1.0.0",
  "categories": [
    {
      "id": "base",
      "label": "Base",
      "description": "Foundation values that drive spacing, radius, and typography scales.",
      "settings": [
        {
          "variable": "--base",
          "label": "Base Unit",
          "description": "Main unit that drives radius and spacing scales.",
          "type": "range",
          "default": "8px",
          "unit": "px",
          "locked": true
        },
        {
          "variable": "--base-font-size",
          "label": "Base Font Size",
          "description": "Root font size. All typographic sizes derive from this.",
          "type": "select",
          "default": "16px",
          "unit": "px",
          "options": [
            { "value": "16px", "label": "Standard" },
            { "value": "18px", "label": "Large" }
          ]
        }
      ]
    },
    {
      "id": "radius",
      "label": "Radius",
      "description": "Border radius and corner shape style.",
      "settings": [
        {
          "variable": "--border-radius",
          "label": "Border Radius",
          "type": "range",
          "default": 1,
          "unit": "",
          "min": 0,
          "max": 5,
          "step": 0.25
        },
        {
          "variable": "--corner-shape",
          "label": "Corner Shape",
          "type": "select",
          "default": "squircle",
          "options": [
            { "value": "square", "label": "Square" },
            { "value": "rounded", "label": "Rounded" },
            { "value": "squircle", "label": "Squircle" },
            { "value": "circular", "label": "Circular" },
            { "value": "bevel", "label": "Bevel" },
            { "value": "scoop", "label": "Scoop" }
          ]
        }
      ]
    },
    {
      "id": "typography",
      "label": "Typography",
      "description": "Font families, type scale, weights, and line heights.",
      "settings": [
        {
          "variable": "--font-family-base",
          "label": "Body Font",
          "type": "font",
          "default": "\"Roboto\", sans-serif"
        },
        {
          "variable": "--font-family-heading",
          "label": "Heading Font",
          "description": "Falls back to body font if not set.",
          "type": "font",
          "default": "var(--font-family-base)"
        },
        {
          "variable": "--font-family-code",
          "label": "Code Font",
          "type": "font",
          "default": "\"Fira Sans\", \"Monaco\", \"Consolas\", \"Menlo\", \"Lucida Console\", \"Courier New\", \"Courier\", \"Console\"",
          "locked": true
        },
        {
          "variable": "--font-size-scale-ratio",
          "label": "Type Scale",
          "description": "Multiplier that generates all font sizes from the base.",
          "type": "select",
          "default": "1.250",
          "options": [
            { "value": "1.067", "label": "Minor Second" },
            { "value": "1.125", "label": "Major Second" },
            { "value": "1.200", "label": "Minor Third" },
            { "value": "1.250", "label": "Major Third" },
            { "value": "1.333", "label": "Perfect Fourth" },
            { "value": "1.414", "label": "Augmented Fourth" },
            { "value": "1.500", "label": "Perfect Fifth" },
            { "value": "1.618", "label": "Golden Ratio" }
          ]
        },
        {
          "variable": "--font-weight-normal",
          "label": "Normal Weight",
          "type": "select",
          "default": "400",
          "options": [
            { "value": "100", "label": "Thin" },
            { "value": "200", "label": "Extra Light" },
            { "value": "300", "label": "Light" },
            { "value": "400", "label": "Regular" },
            { "value": "500", "label": "Medium" },
            { "value": "600", "label": "Semi Bold" }
          ]
        },
        {
          "variable": "--font-weight-medium",
          "label": "Medium Weight",
          "type": "select",
          "default": "500",
          "options": [
            { "value": "400", "label": "Regular" },
            { "value": "500", "label": "Medium" },
            { "value": "600", "label": "Semi Bold" },
            { "value": "700", "label": "Bold" }
          ]
        },
        {
          "variable": "--font-weight-bold",
          "label": "Bold Weight",
          "type": "select",
          "default": "700",
          "options": [
            { "value": "600", "label": "Semi Bold" },
            { "value": "700", "label": "Bold" },
            { "value": "800", "label": "Extra Bold" },
            { "value": "900", "label": "Black" }
          ]
        },
        {
          "variable": "--line-height-base",
          "label": "Body Line Height",
          "type": "range",
          "default": "1.625",
          "min": 1.0,
          "max": 2.0,
          "step": 0.025
        },
        {
          "variable": "--line-height-heading",
          "label": "Heading Line Height",
          "type": "range",
          "default": "1.33",
          "min": 1.0,
          "max": 1.8,
          "step": 0.01
        },
        {
          "variable": "--letter-spacing-base",
          "label": "Letter Spacing",
          "type": "range",
          "default": "0",
          "unit": "em",
          "min": -0.05,
          "max": 0.2,
          "step": 0.005
        }
      ]
    },
    {
      "id": "borders",
      "label": "Borders",
      "description": "Border width tokens for UI elements.",
      "settings": [
        {
          "variable": "--border-width",
          "label": "Size",
          "type": "range",
          "default": "1",
          "unit": "",
          "min": 0,
          "max": 4,
          "step": 1
        }
      ]
    },
    {
      "id": "space",
      "label": "Spacing",
      "description": "Spacing tokens for UI elements.",
      "settings": [
        {
          "variable": "--space",
          "label": "Size",
          "type": "range",
          "default": 1,
          "unit": "",
          "min": 0,
          "max": 3,
          "step": 0.25
        }
      ]
    },
    {
      "id": "shadows",
      "label": "Shadows",
      "description": "Global shadow multipliers and color.",
      "settings": [
        {
          "variable": "--shadow-color",
          "label": "Shadow Color",
          "type": "color",
          "default": "rgba(0, 0, 0, 0.1)"
        },
        {
          "variable": "--shadow-amount",
          "label": "Drop Shadow Intensity",
          "description": "Multiplier for elevation shadows. 0 = none, 1 = default.",
          "type": "range",
          "default": "0.7",
          "min": 0,
          "max": 2,
          "step": 0.1
        },
        {
          "variable": "--shadow-detail-amount",
          "label": "Detail Shadow Intensity",
          "description": "Multiplier for subtle depth shadows. 0 = none, 1 = default.",
          "notes": "Used for low-elevation elements to add subtle depth without full drop shadow. This should be automatically decided, when container query is below a certain size.",
          "type": "range",
          "default": "0.5",
          "min": 0,
          "max": 2,
          "step": 0.1
        }
      ]
    },
    {
      "id": "colors-brand",
      "label": "Brand Colors",
      "description": "Primary, secondary, and accent brand colors with contrast pairs.",
      "settings": [
        {
          "variable": "--color--primary",
          "label": "Primary",
          "type": "color",
          "default": "#2d2d2d",
          "contrast": "--color--primary-contrast"
        },
        {
          "variable": "--color--primary-contrast",
          "label": "Primary Contrast",
          "type": "color",
          "default": "#ffffff"
        },
        {
          "variable": "--color--secondary",
          "label": "Secondary",
          "type": "color",
          "default": "#6e6e6e",
          "contrast": "--color--secondary-contrast"
        },
        {
          "variable": "--color--secondary-contrast",
